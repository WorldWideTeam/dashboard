<div class='container-fluid'>
  <div class='row mt-6'>
    <div class='col-lg-10 col-md-12 mx-auto'>
      <div class='row'>
        <div class='pricing-header p-3 pb-md-5 mx-auto text-center'>
          <h1 class='display-4 fw-normal'>Pricing</h1>
        </div>
      </div>

      <div class='row'>
        {{#each subscriptionPlans}}

          <div class='col-md-4 mb-3 m-auto'>
            <form action='/checkout' method='post'>
              <input name='planIn' type='text' value='{{id}}' hidden />
              <div class='card shadow-lg'>
                <span
                  class='badge rounded-pill bg-dark text-light mt-n2 mx-auto'
                >{{name}}</span>
                <div class='card-header text-center pt-4 pb-3'>
                  <h1 class='font-weight-bold mt-2'>
                    <small class='text-lg mb-auto'>$</small>{{monthPrice}}<small
                      class='text-lg'
                    >/mo</small>
                  </h1>
                </div>
                <div class='card-body text-lg-start text-center pt-0'>
                  <div
                    class='d-flex justify-content-lg-start justify-content-center p-2'
                  >
                    <i class='material-icons my-auto'>done</i>
                    <span class='ps-3'>Some text... </span>
                  </div>

                  <div
                    class='d-flex justify-content-lg-start justify-content-center p-2'
                  >
                    <i class='material-icons my-auto'>remove</i>
                    <span class='ps-3'>Some text... </span>
                  </div>

                  <div
                    class='d-flex justify-content-lg-start justify-content-center p-2'
                  >
                    <i class='material-icons my-auto'>remove</i>
                    <span class='ps-3'>Some text... </span>
                  </div>

                  <button
                    type='submit'
                    class='btn btn-icon bg-gradient-dark d-lg-block mt-3 mb-0 w-100'
                  >
                    Buy
                    <i class='fas fa-arrow-right ms-1'></i>
                  </button>
                </div>
              </div>
            </form>
          </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>